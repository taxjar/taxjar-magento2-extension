<?php
/** @var \Taxjar\SalesTax\Block\Adminhtml\Order\Creditmemo\View\Synced $block */
$creditmemo = $block->getCreditmemo();
$order = $creditmemo->getOrder();
$orderSyncDate = '';
$creditmemoSyncDate = '';

if ($block->getSyncedAtDate($order)) {
    $orderSyncDate = $block->formatDate(
        new \DateTime($block->getSyncedAtDate($order)),
        \IntlDateFormatter::MEDIUM,
        true
    );
}

if ($block->getSyncedAtDate($creditmemo)) {
    $creditmemoSyncDate = $block->formatDate(
        new \DateTime($block->getSyncedAtDate($creditmemo)),
        \IntlDateFormatter::MEDIUM,
        true
    );
}
?>
<?php if (!empty($orderSyncDate)): ?>
<tr>
    <th><?php /* @escapeNotVerified */ echo __('Order Synced to TaxJar') ?></th>
    <td><?php /* @escapeNotVerified */ echo $orderSyncDate ?></td>
</tr>
<tr>
    <th><?php /* @escapeNotVerified */ echo __('Credit Memo Synced to TaxJar') ?></th>
    <td><?php /* @escapeNotVerified */ echo $creditmemoSyncDate ?></td>
</tr>
<?php endif; ?>
