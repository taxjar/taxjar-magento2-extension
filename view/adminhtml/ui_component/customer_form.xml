<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="address">
        <field name="tj_validate_address_button" sortOrder="1000" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">input</item>

                    <item name="disabled" xsi:type="boolean">false</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="displayAsLink" xsi:type="boolean">true</item>
                    <item name="title" xsi:type="string">Validate Address</item>

                    <!--<item name="component" xsi:type="string">Taxjar_SalesTax/js/address_validation</item>-->
                    <item name="source" xsi:type="string">customer</item>

                    <item name="elementTmpl" xsi:type="string">Taxjar_SalesTax/form/element/custom-button</item>
                    <item name="elementId" xsi:type="string">tj_validate_address_button</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
